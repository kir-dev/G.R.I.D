generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  authSchId String @id
  email     String @unique
}

model SessionType {
  id                 Int     @id @default(autoincrement())
  name               String
  length             Int // duration in minutes
  hasPoints          Boolean // true if points are awarded, false otherwise
  pointsForPositions Int[]
  seriesId           Int?
  // TODO referencia a Series-re, amikor a Series-t elkeszitjuk

  session Session[]
}

model Session {
  id            Int         @id @default(autoincrement())
  date          DateTime
  weekendId     Int
  // TODO relacio a Weekend-re annak elkeszultekor
  sessiontypeId Int
  sessiontype   SessionType @relation(fields: [sessiontypeId], references: [id])
}
